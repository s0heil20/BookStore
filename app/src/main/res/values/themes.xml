<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookStore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:colorBackground">@color/almostWhite</item>
        <item name="android:textColor">@color/black</item>
        <item name="blueBackground">@color/lightBlue</item>
        <item name="blueBorder">@color/mediumLightBlue</item>
        <item name="yellowBackground">@color/lightYellow</item>
        <item name="yellowBorder">@color/duskYellow</item>
        <item name="fontFamily">@font/univanova</item>
        <item name="colorPrimary">@color/mediumLightBlue</item>

    </style>

    <style name="Theme.BookStore" parent="Base.Theme.BookStore" />

    <style name="Theme.BookStore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BookStore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BookStore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/duskYellow</item>
    </style>
</resources>