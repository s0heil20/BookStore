<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:padding="10dp"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/mainLinearLayoutDetailed"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/basicInfoRelativeLayout"
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:layout_marginVertical="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_background">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/bookImageViewDetailed"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/titleTextViewDetailed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:ellipsize="end"
                    android:maxWidth="210dp"
                    android:maxLines="4"
                    android:textSize="16sp"
                    android:fontFamily="@font/univanova_bold"
                    android:text="TextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/noRatingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/ratingTextViewDetailed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:text="TextView" />

                </LinearLayout>

                <TextView
                    android:id="@+id/authorsTextViewDetailed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:text="salam" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/priceTextViewDetailed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/leftTextViewDetailed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_margin="5dp"
                        android:text="TextView" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pageCountTextViewDetailed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/yearTextViewDetailed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:text="TextView" />
                </LinearLayout>

                <TextView
                    android:id="@+id/categoryTextViewDetailed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:text="sasdf" />

            </LinearLayout>

            <ImageView
                android:id="@+id/bookImageViewDetailed"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/black_border" />

        </RelativeLayout>

        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/descriptionTextViewDetailed"
            android:background="@drawable/border_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/border_background"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                
                android:id="@+id/buyButtonDetailed"
                android:padding="5dp"
                app:srcCompat="@drawable/baseline_add_shopping_cart_24"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:visibility="visible"
                android:background="@drawable/black_background"/>

            <ToggleButton
                android:id="@+id/addToFavoriteButtonDetailed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/toggle_heart_selector"
                android:textOff=""
                android:textOn=""
                />

            <ImageView
                android:id="@+id/shareButtonDetailed"
                android:padding="5dp"
                app:srcCompat="@drawable/baseline_share_24"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:clickable="true"
                android:visibility="visible"
                android:background="@drawable/black_background"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@drawable/border_background"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rateThisBook"
                    android:layout_gravity="center"/>

                <RatingBar
                    android:id="@+id/ratingBarDetailed"
                    style="@android:attr/ratingBarStyleSmall"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX=".65"
                    android:scaleY=".65"
                    android:transformPivotX="30dp"
                    android:transformPivotY="35dp"
                    android:max="5"
                    android:theme="@style/RatingBar"
                    android:layout_weight="1"
                    />
            </LinearLayout>




            <com.google.android.material.textfield.TextInputLayout


                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="Enter your comment here(Optional)!"
                android:ems="10"
                android:hint="Comment (Optional)"
                android:singleLine="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Small">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/commentTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/submitButtonDetailed"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Submit" />



        </LinearLayout>



        <LinearLayout android:layout_marginVertical="5dp"
            android:id="@+id/commentsListDetailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="@drawable/border_background_light">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:textSize="17sp"
                android:text="@string/comments" />

        </LinearLayout>



    </LinearLayout>

</ScrollView>